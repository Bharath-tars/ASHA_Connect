# Application settings
APP_NAME=ASHA Connect
APP_VERSION=1.0.0
FLASK_ENV=development
PORT=5000
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database settings
MONGO_URI=mongodb://localhost:27017/asha_connect
DB_NAME=asha_connect

# AI Model settings
MODEL_PATH=models/llama/llama-3-8b-instruct.gguf
MODEL_TEMP=0.7
MODEL_MAX_TOKENS=512

# Voice settings
VOICE_LANGUAGE=hi-IN  # Default language (Hindi)
VOICE_GENDER=female
SPEECH_RECOGNITION_API_KEY=your-speech-api-key

# Health assessment settings
HEALTH_MODEL_PATH=models/health/assessment-model.pkl

# Sync settings
SYNC_INTERVAL=3600  # Sync every hour when online
MAX_OFFLINE_DAYS=30  # Store data offline for up to 30 days

# Telephony settings
TELEPHONY_PROVIDER=twilio  # Options: twilio, exotel, etc.
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Logging
LOG_LEVEL=INFO

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours

# Admin settings
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password